<% if notice.present? %>
  <div class="alert alert-success" role="alert" id="notice">
    <%= notice %>
  </div>
<% end %>

<div class="clearfix pb-3">
  <div class="d-inline float-left h1">Apps</div>
  <div class="d-inline float-right"><%= link_to 'New App', new_app_path, class:"btn btn-primary" %></div>
</div>
<table id="datatable" class="table table-striped table-bordered w-100">
  <thead>
    <tr>
      <th>S.no</th>
      <th>Name</th>
      <th>Created Date</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @apps.each_with_index do |app,i| %>
    <tr>
      <td><%= i+1 %></td>
      <td><%= app.name %></td>
      <td><%= app.created_at %></td>
      <td><%= link_to 'Edit', edit_app_path(app) %> / <%= link_to 'Delete', app, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>